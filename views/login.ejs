<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/bootstrap') %> <%- include('partials/notification') %>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | FileSensei</title>
    <link rel="stylesheet" href="../css/style.css" />
  </head>
  <body class="d-flex align-items-center py-4 bg-body-tertiary">
    <%- include('partials/background') %>

    <main class="form-signin w-100 m-auto">
      <form method="POST" action="">
        <a href="/">
          <img
            class="mb-4 drop-shadow-2xl"
            src="../img/filesenseialt1.png"
            alt="FileSensei Logo"
            width="85px"
          />
        </a>

        <h1 class="h4 mb-4 fw-bold">Welcome Back</h1>

        <!-- Error -->
        <%- include('partials/formError.ejs') %>

        <!-- Email -->
        <div class="form-floating mb-3">
          <input
            type="email"
            class="form-control <% if (locals.errors?.email) { %>is-invalid<% } %>"
            id="email"
            name="email"
            placeholder="name@example.com"
            value="<%= locals.oldInput?.email || '' %>"
            required
          />
          <label for="email">Email address</label>
          <% if (locals.errors?.email) { %>
          <div class="invalid-feedback"><%= locals.errors.email %></div>
          <% } %>
        </div>

        <!-- Password -->
        <div class="form-floating mb-3">
          <input
            type="password"
            class="form-control <% if (locals.errors?.password) { %>is-invalid<% } %>"
            id="password"
            name="password"
            placeholder="Password"
            required
          />
          <label for="password">Password</label>
          <% if (locals.errors?.password) { %>
          <div class="invalid-feedback"><%= locals.errors.password %></div>
          <% } %>
        </div>

        <!-- Remember Me -->
        <!--    <div class="form-check text-start mb-3">
          <input
            class="form-check-input"
            type="checkbox"
            value="true"
            id="remember"
            name="remember"
          />
          <label class="form-check-label" for="remember">Remember me</label>
        </div> -->

        <!-- Submit -->
        <button class="btn btn-primary w-100 py-2 mb-3" type="submit">
          Sign In
        </button>

        <!-- Extra Links -->
        <div class="mt-3 text-center text-sm flex flex-col">
          <span class="text-muted">Don't have an account?</span>
          <a href="/auth/register" class="fw-bold text-decoration-none"
            >Register here</a
          >
        </div>

        <p class="mt-5 mb-3 text-body-secondary text-end">&copy; 2025</p>
      </form>
    </main>

    <script defer src="../assets/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
